<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.shoo.demo.appwidgetanimation" xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!-- App Widget -->
        <receiver android:name=".appwidget.MyAppWidgetProvider">
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/wg_provider_info" />

            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.shoo.demo.appwidget.REFRESH" />
                <action android:name="com.shoo.demo.appwidget.SHOW_PREV_PAGE" />
                <action android:name="com.shoo.demo.appwidget.SHOW_NEXT_PAGE" />
            </intent-filter>
        </receiver>

        <service android:name=".appwidget.AppWidgetDataService" />

    </application>

</manifest>